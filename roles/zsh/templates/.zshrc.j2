{# History setup #}
HISTFILE=$HOME/.zsh_history
HISTSIZE=100000
SAVEHIST=$HISTSIZ

{# Set options #}
{# remove older duplicate entries from history #}
setopt hist_ignore_all_dups
{# remove superfluous blanks from history items #}
setopt hist_reduce_blanks
{# save history entries as soon as they are entered #}
setopt inc_append_history
{# share history between different instances of the shell #}
setopt share_history
{# cd by typing directory name if it's not a command #}
setopt auto_cd
{# autocorrect commands #}
setopt correct
{# automatically list choices on ambiguous completion #}
setopt auto_list
{# automatically use menu completion #}
setopt auto_menu
{# move cursor to end if word had one match #}
setopt always_to_end
{# extend glob #}
setopt extendedglob
{# return background job immediately #}
setopt notify
{# Do not beep on error #}
unsetopt beep
{# Do not raise error on nomatch #}
unsetopt nomatch

{# Use eMac binding #}
bindkey -e

{# Set default editor #}
export VISUAL=vim
export EDITOR=vim
